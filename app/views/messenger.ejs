<%- include('partials/header') %>

<div class="container-fluid d-flex h-100 flex-column">
    <div class="row full-height">
        <div class="col-3 border-right">
            <h4>Chats</h4>
            <div class="chat-sidebar-container">
                <ul class="list-group">
                    <% data.forEach(message => { %>
                        <li class="list-group-item open-conversation" id="<%= message._id %>">
                            <%= message.name%>
                        </li>
                    <% }); %>
                </ul>
            </div>

        </div>
        <div class="col-9">
            <div id="chat-box-container">
                <div id="no-chat-selected">
                    <h2 class="text-center">Mensagens</h2>
                    <br>
                    <br>
                    <p class="text-center">Para visualizar uma mensagem, selecione um Chat da barra lateral esquerda</p>
                </div>

                <div id="chat-selected">
                    <h2 class="text-center" id="chatName"></h2>
                    <ul class="list-group" id="messages-wrapper"></ul>

                    <form>
                        <input type="text" name="text" id="message-body-form">
                        <input type="hidden" name="chatId" value="">
                        <input type="button" id="send-message-button" value="Send">
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
<%- include('partials/footer') %>