<div class="post-info border-bottom">
    <div class="row">
        <div class="col-1 p-3">
            <div class="circle-avatar" style="background-image:url(<%= post.InfoUser[0].photo %>)"></div>
        </div>
        <div class="col-7 py-3">
            <t class="font-weight-bold">
                <%= post.InfoUser[0].fullName %>
            </t>
            <t class="text-muted">
                @<%= post.createdBy %>
                â€¢ <%= post.createdAt %>
            </t>
            <br>
            <div class="text-justify">
                <%= post.content.text %>
            </div>
        </div>
        <div class="col-4 p-4 my-auto">

            <% if (post.createdBy == infoFeed.username) { %>
            <i class="btn btn-dark btn-sm rounded-circle">
                <span class="fas fa-pencil-alt" style="color:#fff" aria-hidden="true"></span>
            </i>
            <i class="btn btn-danger btn-sm rounded-circle">
                <span href="/userpost/delete/<%= post._id %>" class="fas fa-trash-alt" style="color:#fff"
                    aria-hidden="true"></span>
            </i>
            <% } %>

            <i class="btn btn-dark btn-sm rounded-circle view-comments" id="<%= post._id %>" data-toggle="modal"
                data-target="#exampleModalLong">
                <span class="fas fa-comment" style="color:#fff" aria-hidden="true"></span>
            </i>




            <p><%= post.Comments.length %></p>

        </div>
    </div>
</div>