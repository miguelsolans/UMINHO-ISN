<%- include('partials/header') %>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 d-none d-lg-block">
            <img alt="User Picture" class="img-fluid" src="/uploads/<%= data.username %>/profile.jpg">

            <div style="text-align: center;"><h3>Widgets</h3></div>

            <% data.widgets.forEach(widget => { %>
                <%- include('partials/widget', { widget })%>
            <% }) %>

        </div>
        <div class="col-sm9">
            <h1><%= data.fullName %></h1>
            <h2>Sobre</h2>
            <p><%= data.bio %></p>

            <hr>
        </div>
    </div>
</div>
<%- include('partials/footer') %>